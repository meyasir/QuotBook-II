<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginLeft="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginRight="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:scrollbars="vertical"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">


    <LinearLayout
        android:id="@+id/linear_layout_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- <ImageView
             android:id="@+id/img_view_category_list"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_person_red_24dp"
             android:transitionName="@string/logoTransitionName">
         </ImageView>-->
        <TextView
            android:id="@+id/txt_cat_list"
            android:layout_width="156dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:fontFamily="sans-serif"
            android:text="category name"
            android:textColor="@color/text_color_item_view"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="124dp"
            android:text="100" />

        <ImageView
            android:id="@+id/img_view_cat_list"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/share_view_round_margin"
            android:src="@drawable/ic_arrow_right_grey_24dp" />
    </LinearLayout>

</LinearLayout>