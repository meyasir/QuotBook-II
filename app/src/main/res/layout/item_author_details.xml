<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_item_recycler_view_author_list"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginLeft="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginRight="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:scrollbars="vertical"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">


    <LinearLayout
        android:id="@+id/linear_layout_author"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_view_author_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_view_fragment"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/image_view_margin_left_6dp"
            android:layout_marginRight="22dp"
            android:transitionName="@string/logoTransitionName"></ImageView>

        <TextView
            android:id="@+id/tx_view_author_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:text="@string/bio_of_author"
            android:textColor="@color/text_color_item_view"
            android:textSize="18sp"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>
