<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_1_1_author"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_card_margin_vertical"
    android:layout_marginTop="@dimen/main_card_margin_vertical"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_main_card_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_two"
            android:layout_marginTop="@dimen/margin_val_2"/>

        <TextView
            android:id="@+id/tv_card_main_1_title_author"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_title_margin"
            android:layout_marginEnd="@dimen/card_title_margin"
            android:text="Author name"
            android:textColor="@color/black" />
        </LinearLayout>

            <TextView
                android:id="@+id/tv_card_main1_subtitle_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author bio, more detail"
                android:layout_marginStart="@dimen/card_subtitle_margin"
                android:layout_marginTop="@dimen/card_low_margin_val_4"
                android:layout_marginLeft="@dimen/card_subtitle_margin" />


        <Button
            android:id="@+id/btn_card_main_author"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_bottom_margin"
            android:layout_marginTop="@dimen/margin_val_2"
            android:layout_marginLeft="@dimen/see_more_margin_left"
            android:text="see more"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>
</android.support.v7.widget.CardView>